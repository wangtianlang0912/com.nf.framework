<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/umeng_fb_new_reply_notifier"
        android:layout_width="7dip"
        android:layout_height="7dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:src="@drawable/umeng_fb_point_normal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/umeng_fb_list_item_selector"
        android:minHeight="50dip"
        android:orientation="vertical"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/umeng_fb_fbpreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="This is the preview blabalbablabalablaabalabl"
            android:textColor="#818286"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/umeng_fb_dev_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Reply:Hi,We are working on it."
            android:textColor="#69a73b"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/umeng_fb_state_or_date"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_marginLeft="8dip"
            android:gravity="center_vertical"
            android:text="stateORdate"
            android:textSize="12dip" />
    </LinearLayout>

</RelativeLayout>